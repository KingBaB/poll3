<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.poll.dao.extend.SurveyVMMapper">
 	<select id="selectAll" resultMap="SurveyVMResult">
 		select * from poll_survey
 	</select>
 	<select id="selectSurveyVMById" resultMap="SurveyVMResult">
 		select * form poll_survey where id=#{id}
 	</select>
 	<!-- 定义结果集 -->
 	<!-- id, name,description,grade_id,charge_id -->
 	<resultMap type="com.briup.apps.poll.bean.extend.SurveyVM" id="SurveyVMResult">
 		<id column="id" property="id"/>
 		<result column="status" property="status"/>
 		<result column="code" property="code"/>
 		<result column="surveyDate" property="surveydate"/>
 		<association 
				 column="clazz_id"
				 property="clazzVM"
				 select="com.briup.apps.poll.dao.extend.ClazzVMMapper.selectClazzById">
		</association>
		<association 
				 column="course_id"
				 property="course"
				 select="com.briup.apps.poll.dao.CourseMapper.selectByPrimaryKey">
		</association>
 		<association 
				 column="user_id"
				 property="user"
				 select="com.briup.apps.poll.dao.UserMapper.selectByPrimaryKey">
		</association>
		<association 
				 column="questionnaire_id"
				 property="questionnaireVM"
				 select="com.briup.apps.poll.dao.extend.QuestionnaireVMMapper.selectQuestionnaireById">
		</association>
 	</resultMap>
</mapper>